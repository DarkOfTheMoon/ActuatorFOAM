FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0/solid";
    object      rhoc;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [ 0 -3 1 0 0 1 0 ];

internalField   uniform 0;

boundaryField
{
    solid_left
    {
        type            fixedValue;
        value           uniform 0;
    }
    solid_bottom
    {
        type            fixedValue;
        value           uniform 0;
    }
    solid_right
    {
        type            fixedValue;
        value           uniform 0;
    }
    actuator1_surface
    {
        type            zeroGradient;
        value           uniform 0;
    }
    actuator2_surface
    {
        type            fixedValue;
        value           uniform 1;
    }
    zfaces
    {
        type            empty;
    }
    solid_to_air
    {
        type            compressible::turbulentTemperatureCoupledBaffleMixed;
        value           uniform 0;
        Tnbr            rhoc;
        kappa           lookup;
        kappaName       epsField;
    }
}


